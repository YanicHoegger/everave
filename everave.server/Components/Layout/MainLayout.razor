@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center border-bottom bg-white shadow-sm" style="z-index: 1500;">
            <img src="https://www.eve-rave.ch/wp-content/uploads/2016/05/Logo_mitBild.png"
                 alt="eve&rave Logo"
                 class="img-fluid me-3"
                 style="height: auto; max-height: 80px;" />

            <div class="d-flex flex-grow-1 justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <Navigation />
                </div>
                <div class="d-flex align-items-center">
                    <Account />
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
